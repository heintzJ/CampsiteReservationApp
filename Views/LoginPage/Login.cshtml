<div class="row">
    <form asp-area="" asp-controller="LoginPage" asp-action="Login" class="col-md-4 mx-auto">
        <div class="form-group">
            <label for="emailAddress">Email Address</label>
            <input type="email" class="form-control mb-3" id="emailAddress" placeholder="Enter Email Address">
        </div>
        <div class="form-group">
            <label for="passwordInput">Password</label>
            <input type="password" class="form-control mb-3" id="passwordInput" placeholder="Enter Password">
        </div>
        <a asp-controller="Campgrounds" asp-action="CampgroundList" class="btn btn-primary" role="button">Login</a>
        <a asp-controller="LoginPage" asp-action="CreateUser" class="btn btn-primary" role="button">Create an account</a>
    </form>
</div>