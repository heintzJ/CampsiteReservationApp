@model CampsiteReservationApp.Models.LoginViewModel

<h1>Login</h1>
<div class="row">
    <form asp-area="" asp-controller="LoginPage" asp-action="Login" method="post" class="col-md-4 mx-auto">
        <div class="form-group">
            <label asp-for="Email">Email Address</label>
            <input asp-for="Email" type="email" class="form-control mb-3" id="emailAddress" placeholder="Enter Email Address">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" type="password" class="form-control mb-3" id="passwordInput" placeholder="Enter Password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <!--<a asp-controller="Campgrounds" asp-action="CampgroundList" class="btn btn-primary" role="button">Login</a>-->
        <button type="submit">Login</button>
        <a asp-controller="Users" asp-action="Create" class="btn btn-primary" role="button">Create an account</a>
    </form>
</div>